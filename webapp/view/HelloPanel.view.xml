<mvc:View controllerName="logaligroup.sapui5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    displayBlock="true">

    <Panel headerText="{i18n>helloPanel}" 
            class="sapUiResponsiveMargin" 
            width="auto"
            expandable="{device>/system/phone}"
            expanded="{= !${device>/system/phone} }">
        <content>
            <Button id="helloDialogButton" icon="sap-icon://action" text="{i18n>helloDialog}" press="onOpenDialog" class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"></Button>
            <Button text="{i18n>showHelloButton}" press="onShowHello" class="sapUiSmallMarginEnd sapUiHideOnDesktop"></Button>
            <Input value="{/recipient/name}" width="60%" valueLiveUpdate="true"/>
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements"/>            
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.sapui5.view.Form01" type="XML"/>    
</mvc:View>